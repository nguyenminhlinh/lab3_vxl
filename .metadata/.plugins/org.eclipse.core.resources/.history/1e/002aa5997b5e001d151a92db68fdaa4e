#include"button.h"

int button1_flag=0;
int button1_flag3s=0;
int button1_flag3s_delay=0;
int KeyReg0=NORMAL_STATE;
int KeyReg1=NORMAL_STATE;
int KeyReg2=NORMAL_STATE;

int KeyReg3=NORMAL_STATE;
int TimerForKeyPress=300;
void subKeyProcess()
{
	button1_flag=1;
	//HAL_GPIO_TogglePin(R1_GPIO_Port, R1_Pin);
}
void subKeyProcess3s()
{
	button1_flag3s=1;
	//HAL_GPIO_TogglePin(R1_GPIO_Port, R1_Pin);
}
void subKeyProcess_delay()
{
	button1_flag3s_delay=1;
}
void getKeyInput()
{
	KeyReg0=KeyReg1;
	KeyReg1=KeyReg2;
	KeyReg2=HAL_GPIO_ReadPin(BTN1_GPIO_Port, BTN1_Pin);
	if((KeyReg0==KeyReg1)&&(KeyReg1==KeyReg2))
	{
		if(KeyReg3!=KeyReg2)
		{
			KeyReg3=KeyReg2;
			if(KeyReg2==PRESSED_STATE)
			{
				//todo
				subKeyProcess();
				TimerForKeyPress=300;
			}
		}else{
			if(KeyReg2==PRESSED_STATE){subKeyProcess_delay();}
			TimerForKeyPress--;
			if(TimerForKeyPress==0)
			{
				//todo
				if(KeyReg2==PRESSED_STATE)
				{
				subKeyProcess3s();
				}
				TimerForKeyPress=300;
			}

		}
	}else
	{button1_flag3s=0;}


}

